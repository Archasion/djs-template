{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "dependencyDashboard": false,
  "assignees": [
	"archasion"
  ],
  "extends": [
	"config:best-practices",
	":rebaseStalePrs"
  ],
  "packageRules": [
	{
	  "description": "Automatically merge minor and patch-level updates",
	  "matchUpdateTypes": [
		"minor",
		"patch",
		"digest"
	  ],
	  "automerge": true,
	  "automergeType": "branch"
	}
  ]
}