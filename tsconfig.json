{
  "compilerOptions": {
	"lib": ["ESNext"],
	"types": ["bun-types"],
	"module": "esnext",
	"target": "esnext",
	"moduleResolution": "bundler",
	"moduleDetection": "force",
	"allowImportingTsExtensions": true,
	"noEmit": true,
	"composite": true,
	"strict": true,
	"downlevelIteration": true,
	"skipLibCheck": true,
	"allowSyntheticDefaultImports": true,
	"forceConsistentCasingInFileNames": true,
	"allowJs": true,
	"paths": {
	  "@/*": ["src/*"],
	  "@data/*": ["data/*"]
	}
  },
  "include": [
	"./data/**/*.json",
	"./src/**/*",
	"./tests/**/*"
  ]
}